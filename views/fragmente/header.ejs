<script>
  var tema = localStorage.getItem("tema");
  if (!tema) {
    localStorage.setItem("tema", "dark");
  } else {
    if (tema == "dark") document.body.classList.add("dark");
  }
</script>
<header id="top">
  <h1 class="page-title">Supercars</h1>
  <nav>
    <label id="hamburger" for="ch-menu">
      <img src="resurse/imagini/Hamburger_icon_alb.png" alt="menu" />
    </label>
    <input id="ch-menu" type="checkbox" />
    <ul class="meniu">
      <li><a href="/index">Acasa</a></li>
      <li class="menu-masini">
        <div><a href="/produse">Masini</a></div>
        <ul class="submeniu animated">
          <% for (let optiune of locals.optiuniMeniu) { %>
          <li>
            <a href="/produse/?brand=<%= optiune.unnest %>"
              ><%= optiune.unnest %></a
            >
          </li>
          <% } %> <% if(locals.utilizator) { %> <% if(locals.utilizator.rol ==
          "admin") { %>
          <li>
            <a href="/administrare">Administrare</a>
          </li>
          <% } %> <% } %>
        </ul>
      </li>
      <li><a href="/cos">Cos</a></li>
      <li><a href="/despre">Despre</a></li>
      <li><a href="/inregistrare">Inregistrare</a></li>
      <% if(locals.utilizator) { %>
      <li>
        <div><%- locals.utilizator.username %></div>
        <ul>
          <li><a href="/profil">Profil</a></li>
          <li><a href="/logout">Logout</a></li>
          <form>
            <li><a href="/sterge_cont">Sterge cont</a></li>
          </form>
        </ul>
      </li>
      <% } %>
      <li><a href="/useri">Useri</a></li>
    </ul>
  </nav>
  <% if(!locals.utilizator) { %>
  <form
    id="form_inreg"
    method="post"
    class="date"
    action="/login"
    enctype="multipart/form-data"
  >
    <p>
      <label>
        Username:
        <input
          type="text"
          name="username"
          id="inp-username"
          value="prof<%= Math.floor(Math.random()*100000) %>"
          required
          pattern="[A-Za-z0-9]+"
        />
      </label>
    </p>
    <p>
      <label>
        Parola:
        <input id="parl" type="password" required name="parola" value="" />
      </label>
    </p>
    <p>
      <input type="submit" value="Logare" />
    </p>
  </form>
  <% } %>
  <p style="color: rgb(243, 142, 142)"><%- locals.mesajLogin %></p>
</header>
