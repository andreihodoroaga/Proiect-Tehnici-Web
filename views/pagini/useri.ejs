<!DOCTYPE html>
<html lang="ro">
  <head>
    <meta name="description" content="Cofetaria Dulcelind - utilizatori." />
    <meta name="keywords" content="cofetarie, Dulcelind, utilizatori" />
    <link rel="stylesheet" href="/resurse/css/useri.css" type="text/css" />
    <title>Supercars - utilizatori</title>
    <%- include("../fragmente/head") %>
  </head>
  <body>
    <%- include("../fragmente/header") %>

    <main>
      <div class="afisaj">
        <h2>Useri</h2>

        <table id="useri">
          <tr>
            <th>id</th>
            <th>Username</th>
            <th>Nume</th>
            <th>Prenume</th>
            <th>Data</th>
            <th>Rol</th>
            <th>Reseteaza parola</th>
          </tr>

          <% for (var i = 0; i < useri.length; i++) { if(useri[i].rol=="comun"){
          %>
          <tr>
            <td><%= useri[i].id %></td>
            <td><%= useri[i].username %></td>
            <td><%= useri[i].nume %></td>
            <td><%= useri[i].prenume %></td>
            <% d=new Date(useri[i].data_adaugare)
            sir_data=`${d.getDate()}/${d.getMonth()}/${d.getFullYear()}
            ${d.getHours()}:${d.getMinutes()}:${d.getSeconds()}` %>
            <td><%= sir_data %></td>
            <td><%= useri[i].rol %></td>
            <td>
              <form
                id="sterge_<%-useri[i].id%>"
                method="post"
                action="/schimba_parola/<%-useri[i].id%>"
              >
                <input type="text" name="id_utiliz" value="<%-useri[i].id %>" />
                <input
                  type="text"
                  name="email_utiliz"
                  value="<%-useri[i].email %>"
                />
                <button type="submit" class="reset-pass-btn">
                  Reseteaza parola
                </button>
              </form>
            </td>
          </tr>

          <% } %> <% } %>
        </table>

        <p>Sterge utilizator</p>
        <form id="sterge" method="post" action="/sterge_utiliz">
          <label> Id: <input type="text" name="id_utiliz" value="" /> </label>

          <input type="submit" value="Submit" />
        </form>

        <p><%= locals.mesajStergereUtiliz %></p>
      </div>
    </main>

    <%- include("../fragmente/footer") %>
  </body>
</html>
